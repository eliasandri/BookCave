@model List<BookCave.Models.ViewModels.AuthorDetailsViewModel>

<style>
    .list-group{
        border-style: solid; 
        border-width: 2px;
        border-radius: 5px;
        border-color:#F1F1F1;
        width: 50%
    }  

    
    
</style>




<div class ="list-group"style="margin-right: auto; margin-left: auto; ">
    <ul class="list-group" style="margin-left: auto; margin-right:auto; list-style-type: none;">
     @foreach (var author in Model)
     {      
        <h1>@author.Name</h1>
        <h3>@author.DateOfBirth</h3>
        
        @foreach (var books in author.Books)
        {     
            <li style="border-radius: 5px; border-style:solid; border-color:white; text-align: center; background-color: #ffbb99;"><a asp-controller="Book" asp-action="Details">@books.Title</a></li>
        }
    } 
    </ul>
</div>
