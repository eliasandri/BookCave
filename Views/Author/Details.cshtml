@model BookCave.Models.ViewModels.AuthorDetailsViewModel

<style>
    .list-group{
        border-style: solid; 
        border-width: 2px;
        border-radius: 5px;
        border-color:#F1F1F1;
        width: 50%
    }  

    
    
</style>




<div class ="list-group"style="margin-right: auto; margin-left: auto; ">
    <ul class="list-group" style="margin-left: auto; margin-right:auto; list-style-type: none;">
         
        <h1>@Model.Name</h1>
        <h3>@Model.DateOfBirth</h3>
        
        @for (int i = 0; i < Model.Books.Count; i++)
        {     
            <li style="border-radius: 5px; border-style:solid; border-color:white; text-align: center; background-color: #ffbb99;"><a asp-controller="Book" asp-action="Details" asp-route-id="@Model.Books[i].Id">@Html.DisplayFor(m => Model.Books[i].Title)</a></li>
        }
    
    </ul>
</div>
