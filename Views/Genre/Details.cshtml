@model BookCave.Models.ViewModels.GenreDetailsViewModel
<link rel="stylesheet" href="~/css/site.css">

    <ul class="breadcrumb">
  <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
  <li><a asp-area="" asp-controller="Genre" asp-action="Index">Genre</a></li>
  <li>Genre Details</li>
</ul>

    <div class="center">
        <h1>Books in this genre</h1></br>

<div class="AllTables" >    
<table class="table table-hover">
  
  
     @for (int i = 0; i < Model.Books.Count; i ++)
  {
  <tr class="active">
      <td><a asp-controller ="Book" asp-action ="Details" asp-route-id="@Model.Books[i].BookId">@Html.DisplayFor(m => Model.Books[i].Title)</a></td>
    </tr>
  }



</table>
</div>
</div>
