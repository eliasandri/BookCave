@model BookCave.Models.ViewModels.ReviewViewModel

<link rel="stylesheet" href="~/css/site.css" type="text/css">
@{
    ViewBag.Title = "Shopping Cart";
}

<ul class="breadcrumb">
  <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
  <li><a asp-area="" asp-controller="Book" asp-action="Shop">Books</a></li>
  <li><a asp-area="" asp-controller="ShoppingCart" asp-action="IndexAsync">My Cart</a></li>
  <li>Review Order</li>
</ul>

<h2 class="center">
    Review your order, is this correct?
</h2>

<table class="table " id="shoppinglist">
    <tr id="tritem">
        <th>
            Item Name
        </th>
        <th>
            Price (each)
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.Books)
    {
        <tr id="row-@item.BookId">
            <td>
                 @Html.ActionLink(item.BookTitle,
"Details", "Book", new { id = item.BookId }, null)
            </td>
            <td>
                @item.BookPrice $
            </td>
            <td id="item-Count-@item.BookId">
               @item.Count 
            </td>
            <td>
            </td>
        </tr>
    }
    <tr id="indexasync-tr">
        <td class="bold">
            Total
        </td>
        <td></td>
        <td></td>
        <td id="cart-total" class="bold">
            @Model.CartTotal
        </td>
    </tr>
</table>
<div class="center">
<button class="btn btn-defult;">
<p class="button">
    @Html.ActionLink("<<Take me back ", "IndexAsync", "ShoppingCart")
</p>
</button>
<button class="btn btn-defult;">
<p class="button">
    @Html.ActionLink("Yes! Continue>> ", "AddressAndPaymentAsync", "Checkout")
</p>
</button>
</div>
<div id="update-message">
</div>
