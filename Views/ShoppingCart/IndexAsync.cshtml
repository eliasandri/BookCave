@model BookCave.Models.ViewModels.ShoppingCartViewModel


<link rel="stylesheet" href="~/css/site.css" type="text/css">


@{
    ViewBag.Title = "Shopping Cart";
}
<ul class="breadcrumb">
  <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
  <li><a asp-area="" asp-controller="Book" asp-action="Shop">Books</a></li>
  <li><a asp-area="" asp-controller="Book" asp-action="Details" >Books Detils</a></li>
<li>My Cart</li>
</ul>



<h1 class="center">
    Review your cart:
</h1>

<table class="table table-hover " id="shoppinglist">
    <tr id="tritem">
        <th>
            Item Name
        </th>
        <th>
            Price (each)
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.Books)
    {
        <tr id="row-@item.BookId">
            <td>
                @item.BookTitle
            </td>
            <td>
                @item.BookPrice $
            </td>
            <td id="item-count-@item.BookId">
               @item.Count 
            </td>
            <td>
                <button class="btn btn-defult"><a href="#" class="RemoveLink"
                   data-id="@item.BookId">
                    Remove
                    from cart
                </a></button>
            </td>
        </tr>
    }
    <tr id="indexasync-tr">
        <td class="bold">
            Total
        </td>
        <td></td>
        <td></td>
        <td id="cart-total" class="bold">
            @Model.CartTotal
        </td>
    </tr>
</table>
<div class="center">
<button class="btn btn-defult;">
<p class="button">
    @Html.ActionLink("Checkout>> ", "AddressAndPaymentAsync", "Checkout")
</p>
</button>
</div>
<div id="update-message">
</div>