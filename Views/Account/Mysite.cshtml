@model BookCave.Models.ViewModels.MySiteViewModel
<link rel="stylesheet" href="~/css/site.css">
<body>
    <div class="mysite-div">
        <h1 class="mysite-h1">My Profile</h1> <br/>
            <img src="~/images/default-user.png" alt="Myprofile Image">
            <form asp-action="MySite" asp-controller="Account" class="form-horizontal" method="POST">
            <h1>@Model.FirstName</h1>
            <h1>@Model.LastName</h1>
            <h3>Address: @Model.Address</h3>
            <h3>Favorite book: @Model.FavoriteBook</h3>
            </form>
                <form asp-action="OrderHistory" asp-controller="Account" method="POST">
                  <br/>
                  <button type="submit" class="btn btn-default btn-lg">My order history</button>
                </form>
            <br/>
            <form asp-action="EditProfile" asp-controller="Account" method="POST">
                <button type="submit" class="btn btn-default btn-md">Edit Profile</button>
            </form>
    </div>
</body>