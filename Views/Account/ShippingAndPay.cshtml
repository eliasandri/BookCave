</head>

<body>
<div class="row">
  <div class="col-75">
    <div class="container" style="width:60%;">
      <form method="POST">

        <div class="row">
          <div class="col-50">
            <h3>Shipping informations</h3>
            <label for="firstName">Full Name</label>
            <input type="text" id="firstName" name="firstName" >
            <label for="email">Email</label>
            <input type="text" id="email" name="email" ></br>
            <label for="adr"> Address</label>
            <input type="text" id="adr" name="address" >
            <label for="city"> City</label>
            <input type="text" id="city" name="city" ></br>
            <label for="zip">Zip</label>
            <input type="text" id="zip" name="zip" >
            <select>
                <option value="US">United State</option>
                <option value="UK">United Kingdom</option>
                <option value="Iceland">Iceland</option>
                <option value="Sweden">Sweden</option>
                <option value="Denmark">Denmark</option>
                <option value="Norway">Norway</option>
            </select>
            </div>
          </div>

          <div class="col-50">
            <h3>Payment</h3>
            <label for="Firstname">Accepted Cards</label>
            <div class="icon-container">
              <i class="fa fa-cc-visa" style="color:navy;"></i>
              <i class="fa fa-cc-amex" style="color:blue;"></i>
              <i class="fa fa-cc-mastercard" style="color:red;"></i>
              <i class="fa fa-cc-discover" style="color:orange;"></i>
            </div>
            <label for="cardholderName">Name on Card</label>
            <input type="text" id="cardholderName" name="cardholderName" ></br>
            <label for="cardnumber">Credit card number</label>
            <input type="text" id="cardnumber" name="cardnumber">
            <label for="expdate">Exp Month and Year</label>
            <input type="expdate" id="expdate" name="cardnumber"></br>
            <label for="cvv">CVV</label>
            <input type="text" id="cvv" name="cvv" >
            </div>
        
        </br>
        <input type="submit" value="Continue to checkout" class="btn" style="background-color: green; color:white;">
      </form>
    </div>
  </div>

 
 

</body>
</html>