@model List<BookCave.Models.ViewModels.BookTop5ViewModel>

<link rel="stylesheet" href="~/css/site.css" type="text/css">


  @{
    ViewData["Title"] = "Home";
  }

  <style>
    .fa {
      font-size: 4em;
    }

    body {
      background-image: url("~/images/Portfolio/2.jpg");
    }

    
  </style>

<div class="row text-center">
  <h1 style="font-size:4em;">Classy Books</h1></hr>
  <p class="text-muted">Come check out our catalog of fine books</p>
  <a asp-action="Shop" asp-controller="Book" class="btn btn-primary btn-lg">Browse our catalog</a>
</div>

<div class="container-fluid">
  <section id="about">
    <div class="row">

      <div class="col-xs-12 col-sm-6 col-md-3 text-center">
        <span class="fa fa-book text-primary"></span>
        <h3>Exclusive Books</h3>
        <p class="text-muted">We offer only exclusive books</p>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-3 text-center">
        <span class="fa fa-plane text-primary"></span>
        <h3>Ready to ship</h3>
        <p class="text-muted">We ship all over the world!</p>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-3 text-center">
        <span class="fa fa-phone text-primary"></span>
        <h3>Mobile friendly!</h3>
        <p class="text-muted">Responsive design for mobile devices!</p>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-3 text-center">
        <span class="fa fa-heart text-primary"></span>
        <h3>Made with sweet love</h3>
        <p class="text-muted">...and bananas. Mostly bananas...</p>
      </div>

    </div>
  </section>

  <br>
  <h2 class="h2Heading">Top 5 rated books</h2>
  <br>

  <section id="portfolio">
    <div class="row"> 
      @foreach (var book in Model)
      {
        <div class="col-lg-5" id="borderStyle">
        <img class="img-thumbnail" id="bookImg" src="@book.Image" alt="BookImage">
        <p><a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId"><strong>@book.Title</strong></a></p>
        <p><strong>Rating: @book.Rating</strong></p>
        </div>
      }

        <br><br>
        <h2 id="top5">Newest releases</h2>
        <br>
        <div class="row">
          @for (int i = 0; i < Model[0].GetNewest5Books.Count; i++)
          {
            <div class="col-lg-5" id="borderStyleTwo">
            <img class="img-thumbnail" id="bookImg" src="@Model[0].GetNewest5Books[i].Image" alt="BookImage">
            <p><a asp-controller="Book" asp-action="Details" asp-route-id="@Model[0].GetNewest5Books[i].BookId">@Model[0].GetNewest5Books[i].Title"</a></p>
            <p>Release Year: @Model[0].GetNewest5Books[i].ReleaseYear</p>
            </div>
          }
        </div>

      
    </div>
    </section>


  <section id="contact">
    <div class="row">
      <div class="col-md-8 col-md-offset-2 text-center">
        <h2 class="section-heading">Let's get in touch!</h2>
        </hr>
        <p>Give us a call and order some of our fine books already!</p>
      </div>

      <div class="col-md-4 col-md-offset-2 text-center">
        <span class="fa fa-phone"></span>
        <p>58-12345 </p>
      </div>

      <div class="col-md-4 text-center">
        <span class="fa fa-envelope"></span>
        <p><a href="mailto:TheBookCave@gmail.com">TheBookCave@gmail.com</a></p>
      </div>

    </div>
  </section>

</div>

