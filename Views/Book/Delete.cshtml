@model BookCave.Models.ViewModels.BookDetailsViewModel

<h2>Delete</h2>

<h3>Are you sure you want to delete this book?</h3>

<div class="dl-horizontal">
  <h4>Book</h4>
  <hr>
  <dl>
    <dt>
      Title
    </dt>
    <dd>
      @Model.Title
    </dd>
    <dt>
      Price
    </dt>
    <dd>
      @Model.Price
    </dd>
    <dt>
      Rating
    </dt>
    <dd>
      @Model.Rating
    </dd>
    <dt>
      Description
    </dt>
    <dd>
      @Model.Description
    </dd>
    <dt>
      Release year
    </dt>
    <dd>
      @Model.ReleaseYear
    </dd>
  </dl>

  <form method="POST">
    <div class="form-actions no-color">
      <input type="submit" value="Delete" class="btn btn-danger">
      <a asp-controller="Book" asp-action="Shop">Back to list</a>
    </div>
  </form>
</div>