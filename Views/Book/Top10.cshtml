@model List<BookCave.Models.ViewModels.BookTop10ViewModel>

<link rel="stylesheet" href="~/css/site.css" type="text/css">

<ul class="breadcrumb">
  <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
  <li>Top 10 books</li>
</ul>

  <h2 class="h2Heading">Top 10 rated books</h2>
  <div class="row">
    @foreach (var book in @Model)
    {
      <div class="col-lg-3" id="top10">
      <img class="img-thumbnail" src="@book.Image" alt="BookImage">
      <p>Title: <a asp-controller="Book" asp-action="Details" aspo-route-id="@book.BookId">@book.Title</a></p>
      <p>Rating: @book.Rating</p>
      </div>
    }
  </div>