@model List<BookCave.Models.ViewModels.BookListViewModel>

<table class="table table-striped table-hover">
  
  <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Rating</th>
      <th>Image</th>
    </tr>


  @foreach (var book in @Model)
  {
    <tr>
      <th><a asp-controller ="Book" asp-action ="Details" asp-route-id="@book.BookId">@book.Title</a></th>
      <th>@book.Author</th>
      <th>@book.Price</th>
      <th>@book.Rating</th>
      <th><img src="@book.Image" alt="Book Image"></th>
    </tr>
  }
</table>

