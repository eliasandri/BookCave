@model List<BookCave.Models.ViewModels.BookListViewModel>

<link rel="stylesheet" href="~/css/site.css" type="text/css">



<ul class="breadcrumb">
  <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
  <li>Books</li>
</ul>


<h2 class="center">All books</h2>

<div class="center">
<form method="POST" asp-controller="Book" asp-action="Filter" class="detailed-search">
    <div class="select">
        <label for="orderBy">Filter books by:</label>
        <select name="orderBy">
            <option value="PriceH2L">Price high to low</option>
            <option value="PriceL2H">Price low to high</option>
            <option value="Alphabeticalorder">Title</option>
        </select>
<input type="submit" value="Filter" id="search-button">
</form>
</div>

<div class="displayBooks">
<div class="row">
  @foreach (var book in @Model)
  {
      <div class="col-lg-3 col-sm-12 col-md-6" id="borderStyleThree">
       <p><a asp-controller ="Book" asp-action ="Details" asp-route-id="@book.BookId">@book.Title</a></p>
      <img class="img-thumbnail; indexImg" src="@book.Image" alt="Book Image">
 
        <p><a asp-controller ="Author" asp-action ="Details" asp-route-id="@book.AuthorId">Author: @book.Author</a></p>
        <p>Price: $@book.Price</p>
        <p>Rating: @book.Rating</p>
  
      </div>
  }
</div>
</div>
</div>
</div>
