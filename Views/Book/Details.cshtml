@model BookCave.Models.ViewModels.BookDetailsViewModel

    

<div class="container">
<div class="row align-items-center">


  
    <div class="col-xs-4 ">
     <img src="@Model.Image" alt="Book Image">
    </div>


    <div class="col-xs-4 ">
      <h1>@Model.Title</h1>
      <h3>Rating: @Model.Rating</h3>
      <p style="font-weight:600">Author</p>
     @for (int i = 0; i < Model.Authors.Count; i++)
        {     
            <p><a asp-controller="Author" asp-action="Details" asp-route-id="@Model.Authors[i].Id">@Html.DisplayFor(m => Model.Authors[i].Name)</a></p>
        }
      
    <p>Release Year: @Model.ReleaseYear<p>
    <p style="font-weight:600">Description: </p> 
    <p>@Model.Description</p>
    </br>
    <h3>Price: @Model.Price</h3>
    
    
    <button class="btn btn-default" type="button">Add to Wishlist</button>
    <button class="btn btn-default" style="background-color: green; color:white; " type="button">Add to bakset</button>
    </div>



    <div class="col-xs-4 ">
        <form action="details.cshtml" method="post">
    <label for="comment"> Your comment about this book:</label></br>
    <textarea id="comment" name="user_comment"></textarea></br>
    <button class="btn btn-default" type="submit">Submit Comment</button>
    </form>

      <h2>Rate this book</h2>

<select>
    <option value ="1">1</option>
    <option value ="2">2</option>
    <option value ="3">3</option>
    <option value ="4">4</option>
    <option value ="5">5</option>
    <option value ="6">6</option>
    <option value ="7">7</option>
    <option value ="8">8</option>
    <option value ="9">9</option>
    <option value ="10">10</option>
</select>
   <button class="btn btn-default" type="button">Submit rating</button>

    </div>
  </div>
</div>