@model BookCave.Models.InputModels.OrderCreateViewModel
<link rel="stylesheet" href="~/css/site.css" type="text/css">
@{
    ViewBag.Title = "Address And Payment";
}

<ul class="breadcrumb">
  <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
  <li><a asp-area="" asp-controller="Book" asp-action="Shop">Books</a></li>
  <li><a asp-area="" asp-controller="Book" asp-action="Details">Books Detils</a></li>
  <li><a asp-area="" asp-controller="ShoppingCart" asp-action="IndexAsync">My Cart</a></li>
  <li>Complete order</li>
</ul>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"
        type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"
        type="text/javascript"></script>


<div class="row">
  <div class="col-75">
    <div class="container" style="width:60%;">

      <form method="POST">
        <div class="row">
          <div class="col-50">
            <h3>Shipping informations</h3>

            <label asp-for="FirstName">First Name</label>
            <input type="text" asp-for="FirstName" >
            <span asp-validation-for="FirstName" class="badge"></span>

            <label asp-for="LastName">Last Name</label>
            <input type="text" asp-for="LastName" ></br>
            <span asp-validation-for="LastName" class="badge"></span>

            <label asp-for="Email">Email</label>
            <input type="text" asp-for="Email" >
            <span asp-validation-for="Email" class="badge"></span>

            <label asp-for="Phone">Phone</label>
            <input type="text" asp-for="Phone" ></br>
            <span asp-validation-for="Phone" class="badge"></span>

            <label asp-for="Address"> Address</label>
            <input type="text" asp-for="Address" >
            <span asp-validation-for="Address" class="badge"></span>

            <label asp-for="City"> City</label>
            <input type="text" asp-for="City" ></br>
            <span asp-validation-for="City" class="badge"></span>

            <label asp-for="State"> State</label>
            <input type="text" asp-for="State" >
            <span asp-validation-for="State" class="badge"></span>

            <label asp-for="PostalCode">Zip code</label>
            <input type="text" asp-for="PostalCode">
            <span asp-validation-for="PostalCode" class="badge"></span>

            <select asp-for="Country">
                <option value="US">United State</option>
                <option value="UK">United Kingdom</option>
                <option value="Iceland">Iceland</option>
                <option value="Sweden">Sweden</option>
                <option value="Denmark">Denmark</option>
                <option value="Norway">Norway</option>
            </select>
            
            </div>
          </div>

          
        
        </br>
        <input type="submit" value="Continue to checkout" class="btn" style="background-color: green; color:white;">
      </form>
    </div>
  </div>